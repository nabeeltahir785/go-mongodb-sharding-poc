# MongoDB Sharding POC - Environment Configuration

# Cluster Admin (created first, used for all cluster operations)
MONGO_ADMIN_USER=clusterAdmin
MONGO_ADMIN_PASSWORD=admin123

# Application User (readWrite on the app database)
MONGO_APP_USER=appUser
MONGO_APP_PASSWORD=app123

# Read-Only User
MONGO_READONLY_USER=readOnlyUser
MONGO_READONLY_PASSWORD=read123

# Application Database
MONGO_APP_DATABASE=sharding_poc

# MongoDB Image
MONGO_IMAGE=mongo:7.0
